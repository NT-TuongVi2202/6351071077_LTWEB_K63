@using motor_cycle1.Models
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2 style="text-align:center">Thông tin giỏ hàng</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>Mã xe</td>
        <td>Tên xe</td>
        <td>Ảnh bìa</td>
        <td>Số lượng</td>
        <td>Đơn giá</td>
        <td>Thành tiền</td>
        <td>Chi tiết</td>
        <td>Xóa</td>

    </tr>
    @foreach (var item in Model)
    {
          <tr style="text-align:center; font-weight:bold">
               <td>@item.iMaXe</td>
               <td>@item.sTenXe</td>
               <td><img src="~/hình sản phẩm/@item.s.Anhbia" /></td>
               <td>@item.iSoluong</td>
               <td>@string.Format("{0:0,0}", item.sDongia)</td>
               <td>@String.Format("{0:0,0}", item.d.Thanhtien)</td>
              <td><a href="@Url.Action("Details", "motor_cycle", new {id = item.iMaXe})">Chi tiết</a></td>
              <td>@Html.ActionLink("xóa", "XoaGioHang", new {@iMaSp = item.iMaXe}) </td>
          </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="3">Số lượng xe:@ViewBag.Tongsoluong</td>
        <td colspan="3"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VND</td>
    </tr>
</table>
